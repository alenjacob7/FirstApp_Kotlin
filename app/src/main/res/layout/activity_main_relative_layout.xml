<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Android Dasappan"
        android:textColor="#0d47a1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/txtSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Android is Fun"
        android:textColor="#d84315"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_below="@id/txtLayoutHeader"/>

    <ImageView
        android:id="@+id/imgIronman"
        android:layout_width="163dp"
        android:layout_height="187dp"
        android:layout_gravity="center"
        android:src="@drawable/ironman"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose your weapon"
        android:layout_margin="20dp"
        android:inputType="text"
        android:layout_below="@id/imgIronman"/>

    <Button
        android:id="@+id/btnAttack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:text="Attack!"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>